datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Subscriber {
  id              String   @id @default(uuid())
  email           String   @unique
  unsubscribeToken String  @unique @default(uuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model EmailTemplate {
  id          String   @id @default(uuid())
  name        String
  subject     String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

